<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Pas_Activity"
    tools:deviceIds="wear_square"
    android:gravity="center"
    android:id="@+id/rect_pas_layout">


    <TextView
        android:text="JJ/MM/AAAA"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="40px"
        android:id="@+id/tView_date"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin_left"
        android:layout_above="@+id/tView_val_pas" />

    <TextView
        android:text="300 pas"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="60px"
        android:id="@+id/tView_val_pas"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/activity_horizontal_margin_nb_pas_left" />


    <TextView
        android:text="0 pas/s"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="40px"
        android:id="@+id/tView_pas_par_seconde"
        android:layout_gravity="bottom"
        android:layout_below="@+id/tView_val_pas"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin_pas_par_s_left" />

</RelativeLayout>

